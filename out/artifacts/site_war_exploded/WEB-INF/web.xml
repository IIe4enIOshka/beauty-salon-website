<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>DeleteReview</servlet-name>
        <servlet-class>servlet.Delete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteReview</servlet-name>
        <url-pattern>/delete_review</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddReview</servlet-name>
        <servlet-class>servlet.AddReview</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddReview</servlet-name>
        <url-pattern>/add_review</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Review</servlet-name>
        <servlet-class>dao.ReviewDao</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Review</servlet-name>
        <url-pattern>/review</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlet.AddUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlet.Logout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getData</servlet-name>
        <servlet-class>dao.RequestDao</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getData</servlet-name>
        <url-pattern>/getrequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>inData</servlet-name>
        <servlet-class>servlet.AddRequest</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>inData</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>request_cabinet</servlet-name>
        <servlet-class>dao.GetRequest</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>request_cabinet</servlet-name>
        <url-pattern>/request_cabinet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete_request</servlet-name>
        <servlet-class>dao.DeleteDao</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete_request</servlet-name>
        <url-pattern>/delete_request</url-pattern>
    </servlet-mapping>


</web-app>